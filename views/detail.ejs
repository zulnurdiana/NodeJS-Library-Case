<style>
  #detail {
    padding-top: 6rem;
  }
</style>

<section id="detail">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center mb-3">
        <h1>Detail Peminjam</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-4">
        <div class="card shadow">
          <div class="card-body text-center">
            <% for(let d of detail) { %> 
            <h5><%= d.id_mahasiswa %>-<%= d.nama_mahasiswa %></h5>
            <h6 class="lead"><%= d.id_buku %>-<%= d.nama_buku %> (<%= d.tahun %>)</h6>
            <p class="text-muted"><%= d.tanggal.slice(0,10)%></p>
            <a href="/dashboard" class="card-link">&laquo; kembali ke dashboard</a>
            <% } %> 
          </div>
        </div>
      </div>
    </div>
  </div>
</section>