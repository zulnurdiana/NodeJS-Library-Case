<style>
  #form-tambah-buku{
    padding-top: 6rem;
  }
</style>

<section id="form-tambah-buku">
  <div class="row">
    <div class="col-md-12 text-center mb-3">
      <h1>Form Tambah Buku</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <form action="/updatebuku" method="post">
        <div class="mb-3">
          <label for="id_buku" class="form-label">Id Buku</label>
          <% for(let id of buku) { %>
            <input type="hidden" name="id_buku" value="<%= id.id_buku %>">
            <input type="text" class="form-control" name="id_buku" disabled id="id_buku" value="<%= id.id_buku %>">
            <% } %>
        </div>
        <div class="mb-3">
          <% for(let book of buku) { %>
          <label for="nama_buku" class="form-label">Nama Buku</label>
          <input type="text" class="form-control" value="<%= book.nama_buku %>" id="nama_buku" name="nama_buku" required>
          <% } %> 
        </div>
        <div class="mb-3">
          <label for="tahun" class="form-label">Tahun</label>
          <% for(let tahun of buku) { %> 
          <input type="text" class="form-control" id="tahun" value="<%= tahun.tahun  %>" name="tahun" required>
          <% } %> 
        </div>
        <center>
          <button type="submit" class="btn btn-primary">Submit</button>
        </center>
      </form>
    </div>
  </div>
</section>